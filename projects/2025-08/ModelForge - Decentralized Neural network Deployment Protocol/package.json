{
  "name": "modelforge",
  "version": "0.1.0",
  "description": "AI model registry and deployment platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "pnpm run -r dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm run -r typecheck",
    "test": "pnpm run -r test",
    "clean": "pnpm run -r clean",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "contracts:test": "pnpm --filter contracts test",
    "contracts:deploy": "pnpm --filter contracts deploy",
    "chain:local": "pnpm --filter contracts chain:local",
    "deploy:local": "pnpm --filter contracts deploy:local",
    "deploy:polygon-amoy": "pnpm --filter contracts deploy:polygon-amoy",
    "cli:build": "pnpm --filter cli build",
    "uploader:build": "pnpm --filter uploader build",
    "web:build": "pnpm --filter web build",
    "web:dev": "pnpm --filter web dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}