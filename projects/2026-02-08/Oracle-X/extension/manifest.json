{
  "manifest_version": 3,
  "name": "Oracle-X",
  "version": "1.0.0",
  "description": "AI-powered crypto trading risk analyzer - Analyze before you trade",
  
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage"
  ],
  
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "Oracle-X - Analyze Trading Screenshot"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Capture screenshot and analyze"
    }
  },
  
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  
  "host_permissions": [
    "http://localhost:3000/*"
  ]
}
